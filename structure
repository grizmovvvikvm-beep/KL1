│   │   ├── backend.sh             # Backend установка
│   │   ├── frontend.sh            # Frontend установка
│   │   └── system.sh              # Системные настройки
│   └── utils/
│       ├── helpers.sh             # Вспомогательные функции
│       └── logging.sh             # Логирование
